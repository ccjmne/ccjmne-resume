{
  "json.schemas": [{
    "fileMatch": [
      "src/profile.json"
    ],
    "schema": {
      "$schema": "http://json-schema.org/draft-07/schema",
      "$id": "https://github.com/ccjmne/ccjmne-resume/profile.schema.json",
      "type": "object",
      "required": [
        "links",
        "identity",
        "experience"
      ],
      "properties": {
        "links": {
          "$id": "#/properties/links",
          "type": "array",
          "items": {
            "$id": "#/properties/links/items",
            "type": "object",
            "required": [
              "icon",
              "url",
              "name"
            ],
            "properties": {
              "icon": {
                "$id": "#/properties/links/items/properties/icon",
                "type": "string",
              },
              "url": {
                "$id": "#/properties/links/items/properties/url",
                "type": "string",
              },
              "name": {
                "$id": "#/properties/links/items/properties/name",
                "type": "string"
              }
            },
          }
        },
        "identity": {
          "$id": "#/properties/identity",
          "type": "object",
          "required": [
            "name",
            "title",
            "summary"
          ],
          "properties": {
            "name": {
              "$id": "#/properties/identity/properties/name",
              "type": "string"
            },
            "title": {
              "$id": "#/properties/identity/properties/title",
              "type": "string"
            },
            "summary": {
              "$id": "#/properties/identity/properties/summary",
              "type": "string"
            }
          },
        },
        "experience": {
          "$id": "#/properties/experience",
          "type": "array",
          "items": {
            "$id": "#/properties/experience/items",
            "type": "object",
            "required": [
              "dates",
              "duration",
              "company",
              "location",
              "title",
            ],
            "properties": {
              "dates": {
                "$id": "#/properties/experience/items/properties/dates",
                "type": "string"
              },
              "duration": {
                "$id": "#/properties/experience/items/properties/duration",
                "type": "string"
              },
              "company": {
                "$id": "#/properties/experience/items/properties/company",
                "type": "string"
              },
              "location": {
                "$id": "#/properties/experience/items/properties/location",
                "type": "string"
              },
              "title": {
                "$id": "#/properties/experience/items/properties/title",
                "type": "string"
              },
              "abstract": {
                "$id": "#/properties/experience/items/properties/abstract",
                "type": "string"
              }
            }
          }
        }
      }
    }
  }]
}
